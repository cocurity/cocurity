generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Severity {
  CRITICAL
  WARNING
}

enum Confidence {
  HIGH
  MEDIUM
  LOW
}

enum Grade {
  READY
  CAUTION
  BLOCK
}

enum Verdict {
  LAUNCH_READY
  BLOCKED
}

enum CertificateStatus {
  VALID
  REVOKED
  EXPIRED
}

enum Plan {
  FREE
  PLUS
  PRO
}

enum FindingSource {
  RULE
  AI
}

// ─── Auth (NextAuth / Auth.js) ──────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  subscription  Subscription?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Subscription ───────────────────────────────────────────

model Subscription {
  id                   String    @id @default(cuid())
  userId               String    @unique
  plan                 Plan      @default(FREE)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  currentPeriodStart   DateTime  @default(now())
  currentPeriodEnd     DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ─── Domain Models ──────────────────────────────────────────

model Project {
  id                String        @id @default(cuid())
  repoUrl           String
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  scanRuns          ScanRun[]

  @@index([repoUrl])
}

model ScanRun {
  id          String     @id @default(cuid())
  projectId   String
  repoUrl     String
  commitHash  String
  scanConfigVersion String
  score       Int
  grade       Grade
  verdict     Verdict
  criticalCount Int
  warningCount Int
  aiEnabled   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  findings    Finding[]
  certificates Certificate[]
  fixRequests FixRequest[]
  orders      Order[]

  @@index([repoUrl])
  @@index([commitHash])
  @@index([repoUrl, commitHash, scanConfigVersion])
}

model Finding {
  id          String        @id @default(cuid())
  scanRunId   String
  severity    Severity
  location    String
  riskSummary String
  hint        String
  confidence  Confidence
  source      FindingSource @default(RULE)
  createdAt   DateTime      @default(now())
  scanRun     ScanRun       @relation(fields: [scanRunId], references: [id], onDelete: Cascade)

  @@index([scanRunId])
}

model Certificate {
  id        String   @id @default(cuid())
  certId    String   @unique
  scanRunId String
  status    CertificateStatus @default(VALID)
  pngPath   String
  verifyUrl String
  issuedAt  DateTime @default(now())
  expiresAt DateTime?
  revokedAt DateTime?
  createdAt DateTime @default(now())
  scanRun   ScanRun  @relation(fields: [scanRunId], references: [id], onDelete: Cascade)

  @@index([certId])
  @@index([scanRunId])
}

model FixRequest {
  id        String   @id @default(cuid())
  scanRunId String
  userId    String  @default("")
  contact   String
  urgency   String
  notes     String
  createdAt DateTime @default(now())
  scanRun   ScanRun  @relation(fields: [scanRunId], references: [id], onDelete: Cascade)

  @@index([scanRunId])
  @@index([userId])
}

enum OrderType {
  ONE_TIME
  SUBSCRIPTION
}

enum ProductType {
  ONE_TIME
  SUBSCRIPTION
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
  CANCELLED
}

model Order {
  id                String      @id @default(cuid())
  type              OrderType
  status            OrderStatus @default(PENDING)
  amount            Int         // in cents
  currency          String      @default("usd")
  email             String
  scanRunId         String?
  repoUrl           String?
  items             String      @default("[]") // JSON array: ["Fix Pass","Cert Pass"]
  stripeSessionId   String?     @unique
  stripePaymentId   String?
  stripeCustomerId  String?
  stripeSubId       String?
  paidAt            DateTime?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  scanRun           ScanRun?    @relation(fields: [scanRunId], references: [id])

  @@index([stripeSessionId])
  @@index([email])
  @@index([scanRunId])
}

model Product {
  id          String      @id @default(cuid())
  slug        String      @unique
  name        String
  description String?
  price       Int // in cents (e.g. 14900 = $149)
  currency    String      @default("usd")
  type        ProductType
  interval    String? // "month" for subscriptions, null for one-time
  features    String      @default("[]") // JSON array of feature strings
  benefit     String?
  active      Boolean     @default(true)
  sortOrder   Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
